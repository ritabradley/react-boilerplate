{
    "name": "react-boilerplate",
    "version": "1.0.0",
    "description": "A simpler alternative to create-react-app",
    "main": "index.js",
    "repository": "git@github.com:ritabradley/react-boilerplate.git",
    "author": "Rita Bradley",
    "license": "MIT",
    "scripts": {
        "start": "webpack-dev-server --mode development --open --hot",
        "build": "webpack -â€”mode production",
        "lint": "eslint .",
        "format": "prettier --write \"**/*.+(js|jsx|json|css|md)\""
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn run lint && yarn run format"
        }
    },
    "dependencies": {
        "react": "^16.13.1",
        "react-dom": "^16.13.1"
    },
    "lint-staged": {
        "*.+(js|jsx)": [
            "eslint --fix",
            "git add"
        ],
        "*.+(json|css|md)": [
            "prettier --write",
            "git add"
        ]
    },
    "devDependencies": {
        "@babel/core": "^7.11.4",
        "@babel/preset-env": "^7.11.0",
        "@babel/preset-react": "^7.10.4",
        "babel-loader": "^8.1.0",
        "css-loader": "^4.2.2",
        "eslint": "^7.7.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-config-standard": "^14.1.1",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-react": "^7.20.6",
        "eslint-plugin-standard": "^4.0.1",
        "html-webpack-plugin": "^4.3.0",
        "husky": "^4.2.5",
        "prettier": "^2.1.1",
        "sass": "^1.26.10",
        "sass-loader": "^10.0.1",
        "style-loader": "^1.2.1",
        "webpack": "^4.44.1",
        "webpack-cli": "^3.3.12",
        "webpack-dev-server": "^3.11.0"
    }
}
